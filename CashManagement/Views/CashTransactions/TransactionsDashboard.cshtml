@model CashManagement.Controllers.TransactionsDashboardViewModel
@{
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">لوحة تحكم العمليات النقدية</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">إجمالي العمليات</h5>
                    <p class="card-text">@Model.TotalTransactions</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">إجمالي السحب</h5>
                    <p class="card-text">@Model.TotalWithdrawals.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">إجمالي الإيداعات</h5>
                    <p class="card-text">@Model.TotalDeposits.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">إجمالي الرسوم</h5>
                    <p class="card-text">@Model.TotalFees.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">عدد الخطوط النشطة</h5>
                    <p class="card-text">@Model.ActiveLinesCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">عدد الخطوط المجمدة</h5>
                    <p class="card-text">@Model.FrozenLinesCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">الخطوط النقدية</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>رقم الهاتف</th>
                            <th>الرصيد الحالي</th>
                            <th>الحد اليومي للسحب</th>
                            <th>الحد اليومي للإيداع</th>
                            <th>الحد الشهري للسحب</th>
                            <th>الحد الشهري للإيداع</th>
                            <th>الحالة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cashLine in Model.CashLines)
                        {
                            <tr>
                                <td>@cashLine.PhoneNumber</td>
                                <td>@cashLine.CurrentBalance.ToString("C")</td>
                                <td>
                                    @cashLine.DailyWithdrawLimit.ToString("C")
                                    <div class="progress mt-1">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @cashLine.DailyWithdrawRemainingPercentage%" aria-valuenow="@cashLine.DailyWithdrawRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    @cashLine.DailyDepositLimit.ToString("C")
                                    <div class="progress mt-1">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @cashLine.DailyDepositRemainingPercentage%" aria-valuenow="@cashLine.DailyDepositRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    @cashLine.MonthlyWithdrawLimit.ToString("C")
                                    <div class="progress mt-1">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @cashLine.MonthlyWithdrawRemainingPercentage%" aria-valuenow="@cashLine.MonthlyWithdrawRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    @cashLine.MonthlyDepositLimit.ToString("C")
                                    <div class="progress mt-1">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @cashLine.MonthlyDepositRemainingPercentage%" aria-valuenow="@cashLine.MonthlyDepositRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(cashLine.Status == AccountStatus.Active ? "bg-success" : cashLine.Status == AccountStatus.Frozen ? "bg-warning" : "bg-danger")">
                                        @(cashLine.Status == AccountStatus.Active ? "نشط" : cashLine.Status == AccountStatus.Frozen ? "مجمد" : "محذوف")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">رجوع</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}