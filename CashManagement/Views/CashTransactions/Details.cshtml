@model CashManagement.Controllers.CashTransactionViewModel
@{
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">تفاصيل العملية النقدية</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">رقم العملية</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">رقم الخط</dt>
                <dd class="col-sm-9">@Model.CashLinePhoneNumber</dd>

                <dt class="col-sm-3">المبلغ</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-3">الرسوم</dt>
                <dd class="col-sm-9">@Model.Fees.ToString("C")</dd>

                <dt class="col-sm-3">المبلغ الصافي</dt>
                <dd class="col-sm-9">@Model.NetAmount.ToString("C")</dd>

                <dt class="col-sm-3">نسبة الرسوم</dt>
                <dd class="col-sm-9">@Model.CommissionRate%</dd>

                <dt class="col-sm-3">نوع العملية</dt>
                <dd class="col-sm-9">@(Model.TransactionType == TransactionType.Withdraw ? "سحب" : "إيداع")</dd>

                <dt class="col-sm-3">نوع الإيداع</dt>
                <dd class="col-sm-9">@(Model.DepositType?.ToString() ?? "غير محدد")</dd>

                <dt class="col-sm-3">رقم المستلم</dt>
                <dd class="col-sm-9">@(Model.RecipientNumber ?? "غير متوفر")</dd>

                <dt class="col-sm-3">الوصف</dt>
                <dd class="col-sm-9">@(Model.Description ?? "غير متوفر")</dd>

                <dt class="col-sm-3">الحالة</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == TransactionStatus.Completed ? "bg-success" : "bg-warning")">
                        @(Model.Status == TransactionStatus.Completed ? "مكتمل" : "مجمد")
                    </span>
                </dd>

                <dt class="col-sm-3">المستخدم</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">التاريخ</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">رجوع</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}