            function updateBalanceElement(elementId, amount, label) {
                const element = document.getElementById(elementId);
                if (element) {
                    const numAmount = parseFloat(amount || 0);
                    const formattedAmount = numAmount.toLocaleString('ar-EG', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });
                    
                    // تحديث النص المعروض
                    element.textContent = formatShortAmount(numAmount);
                    
                    // تحديث الـ tooltip مع تفاصيل أكثر
                    const tooltipText = `${formattedAmount} جنيه مصري`;
                    element.setAttribute('data-tooltip', tooltipText);
                    element.setAttribute('data-label', label);
                    element.setAttribute('title', `${label}: ${tooltipText}`); // fallback tooltip
                    
                    // تغيير اللون حسب القيمة
                    element.classList.remove('negative', 'positive');
                    if (numAmount < 0) {
                        element.classList.add('negative');
                    } else if (numAmount > 0) {
                        element.classList.add('positive');
                    }
                    
                    console.log(`تم تحديث ${elementId}: ${tooltipText}`);
                }
            }

            function formatShortAmount(amount) {
                const numAmount = Math.abs(amount);
                if (numAmount >= 1000000) {
                    return (amount / 1000000).toFixed(1) + 'م';
                } else if (numAmount >= 1000) {
                    return (amount / 1000).toFixed(1) + 'ك';
                } else {
                    return amount.toFixed(0);
                }
            }

