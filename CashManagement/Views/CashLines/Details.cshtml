@model CashManagement.Controllers.CashLineViewModel
@{
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">تفاصيل الخط النقدي</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">رقم الهاتف</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">اسم المالك</dt>
                <dd class="col-sm-9">@Model.OwnerName</dd>

                <dt class="col-sm-3">الرقم القومي</dt>
                <dd class="col-sm-9">@Model.NationalId</dd>

                <dt class="col-sm-3">نوع الشبكة</dt>
                <dd class="col-sm-9">@Model.NetworkType</dd>

                <dt class="col-sm-3">الرصيد الحالي</dt>
                <dd class="col-sm-9">@Model.CurrentBalance.ToString("C")</dd>

                <dt class="col-sm-3">الحد اليومي للسحب</dt>
                <dd class="col-sm-9">
                    @Model.DailyWithdrawLimit.ToString("C")
                    <div class="progress mt-1">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.DailyWithdrawRemainingPercentage%" aria-valuenow="@Model.DailyWithdrawRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </dd>

                <dt class="col-sm-3">الحد اليومي للإيداع</dt>
                <dd class="col-sm-9">
                    @Model.DailyDepositLimit.ToString("C")
                    <div class="progress mt-1">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.DailyDepositRemainingPercentage%" aria-valuenow="@Model.DailyDepositRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </dd>

                <dt class="col-sm-3">الحد الشهري للسحب</dt>
                <dd class="col-sm-9">
                    @Model.MonthlyWithdrawLimit.ToString("C")
                    <div class="progress mt-1">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.MonthlyWithdrawRemainingPercentage%" aria-valuenow="@Model.MonthlyWithdrawRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </dd>

                <dt class="col-sm-3">الحد الشهري للإيداع</dt>
                <dd class="col-sm-9">
                    @Model.MonthlyDepositLimit.ToString("C")
                    <div class="progress mt-1">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.MonthlyDepositRemainingPercentage%" aria-valuenow="@Model.MonthlyDepositRemainingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </dd>

                <dt class="col-sm-3">الحالة</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == AccountStatus.Active ? "bg-success" : Model.Status == AccountStatus.Frozen ? "bg-warning" : "bg-danger")">
                        @(Model.Status == AccountStatus.Active ? "نشط" : Model.Status == AccountStatus.Frozen ? "مجمد" : "محذوف")
                    </span>
                </dd>
            </dl>

            <h4 class="mt-4">العمليات المرتبطة</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>رقم العملية</th>
                            <th>المبلغ</th>
                            <th>الرسوم</th>
                            <th>المبلغ الصافي</th>
                            <th>نوع العملية</th>
                            <th>الحالة</th>
                            <th>التاريخ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Transactions != null && Model.Transactions.Any())
                        {
                            foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.Id</td>
                                    <td>@transaction.Amount.ToString("C")</td>
                                    <td>@transaction.Fees.ToString("C")</td>
                                    <td>@transaction.NetAmount.ToString("C")</td>
                                    <td>@(transaction.TransactionType == TransactionType.Withdraw ? "سحب" : "إيداع")</td>
                                    <td>
                                        <span class="badge @(transaction.Status == TransactionStatus.Completed ? "bg-success" : "bg-warning")">
                                            @(transaction.Status == TransactionStatus.Completed ? "مكتمل" : "مجمد")
                                        </span>
                                    </td>
                                    <td>@transaction.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">لا توجد عمليات مرتبطة</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>
                <a asp-action="Index" class="btn btn-secondary">رجوع</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}