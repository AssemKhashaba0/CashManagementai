@model CashManagement.Models.CashLine
@{
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">إضافة خط نقدي جديد</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="OwnerName" class="form-label">اسم المالك</label>
                    <input asp-for="OwnerName" class="form-control" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NationalId" class="form-label">الرقم القومي</label>
                    <input asp-for="NationalId" class="form-control" />
                    <span asp-validation-for="NationalId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NetworkType" class="form-label">نوع الشبكة</label>
                    <select asp-for="NetworkType" class="form-select" asp-items="Html.GetEnumSelectList<NetworkType>()"></select>
                    <span asp-validation-for="NetworkType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CurrentBalance" class="form-label">الرصيد الحالي</label>
                    <input asp-for="CurrentBalance" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="CurrentBalance" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DailyWithdrawLimit" class="form-label">الحد اليومي للسحب</label>
                    <input asp-for="DailyWithdrawLimit" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="DailyWithdrawLimit" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DailyDepositLimit" class="form-label">الحد اليومي للإيداع</label>
                    <input asp-for="DailyDepositLimit" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="DailyDepositLimit" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MonthlyWithdrawLimit" class="form-label">الحد الشهري للسحب</label>
                    <input asp-for="MonthlyWithdrawLimit" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MonthlyWithdrawLimit" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MonthlyDepositLimit" class="form-label">الحد الشهري للإيداع</label>
                    <input asp-for="MonthlyDepositLimit" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MonthlyDepositLimit" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Status" class="form-label">الحالة</label>
                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<AccountStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">إضافة</button>
                <a asp-action="Index" class="btn btn-secondary">رجوع</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}