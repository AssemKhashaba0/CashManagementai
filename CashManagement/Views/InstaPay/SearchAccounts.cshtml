@model IEnumerable<CashManagement.Models.InstaPay>

@{
    ViewData["Title"] = "البحث عن حسابات إنستا باي";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<style>
    /* تعريف المتغيرات للألوان الجديدة */
    :root {
        --bg: #FDFDFD; /* عاجي فاتح */
        --primary: #1D4ED8; /* أزرق نيلي */
        --text: #111827; /* أسود ناعم */
        --light-gray: #F3F4F6; /* رمادي فاتح جداً للترويسة/شريط جانبي */
        --border-color: rgba(17, 24, 39, 0.1); /* أسود ناعم شفاف للحدود */
        --shadow-color: rgba(0, 0, 0, 0.05); /* ظل خفيف */
        --success-text: #22C55E; /* أخضر للحالة الناجحة */
        --info-text: #3ABFF8; /* أزرق فاتح للمعلومات */
    }

    /* تطبيق الخط واتجاه النص */
    body {
        font-family: 'Inter', 'Cairo', sans-serif;
        direction: rtl;
        background-color: var(--bg);
        color: var(--text);
    }

    h1, h2, h3, h4, h5, h6 {
        color: var(--text);
        text-align: right;
    }

    hr {
        border-top: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    /* أنماط الحاوية والبطاقات */
    .container-fluid {
        padding: 1.5rem;
    }

    .card {
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px var(--shadow-color), 0 2px 4px -1px var(--shadow-color);
        margin-bottom: 1.5rem; /* مسافة بين البطاقات */
    }

    .card-header {
        background-color: var(--light-gray);
        border-bottom: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
        font-weight: 600;
        color: var(--text);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-footer {
        background-color: var(--light-gray);
        border-top: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: flex-end; /* محاذاة الأزرار لليمين */
    }

    /* أنماط عناصر النموذج */
    .form-control {
        border-color: var(--border-color);
        color: var(--text);
        background-color: white;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
        text-align: right; /* محاذاة النص داخل حقول الإدخال لليمين */
    }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(29, 78, 216, 0.25);
        }

    /* أنماط الأزرار */
    .btn {
        padding: 0.6rem 1.2rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
    }

        .btn i {
            margin-left: 0.5rem; /* مسافة بين الأيقونة والنص */
            margin-right: 0;
        }

    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background-color: color-mix(in srgb, var(--primary) 90%, black);
            border-color: color-mix(in srgb, var(--primary) 90%, black);
        }

    .btn-info {
        background-color: var(--info-text);
        border-color: var(--info-text);
        color: white;
    }

        .btn-info:hover {
            background-color: color-mix(in srgb, var(--info-text) 90%, black);
            border-color: color-mix(in srgb, var(--info-text) 90%, black);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        border-color: var(--light-gray);
        color: var(--text);
    }

        .btn-secondary:hover {
            background-color: color-mix(in srgb, var(--light-gray) 90%, black);
            border-color: color-mix(in srgb, var(--light-gray) 90%, black);
            color: var(--text);
        }

    /* Style for the text in card body */
    .card-text strong {
        color: var(--primary);
        margin-left: 0.5rem;
    }

    .balance-amount {
        font-size: 1.1em;
        font-weight: bold;
    }

    /* Alert message styling */
    .alert-info {
        background-color: #DBEAFE;
        color: #1E40AF;
        border-color: #93C5FD;
    }
</style>

<div class="container-fluid">
    <h1 class="mb-4">حسابات إنستا باي القادرة على استقبال المبلغ</h1>

    <div class="card mb-4 p-4">
        <form asp-action="SearchAccounts" method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="amount" class="form-label">المبلغ المطلوب</label>
                <input type="number" step="0.01" name="amount" id="amount" class="form-control" placeholder="أدخل المبلغ للبحث" required />
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-2"></i> بحث
                </button>
            </div>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var account in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-header">
                            <span>حساب <strong class="text-primary">@account.PhoneNumber</strong></span>
                        </div>
                        <div class="card-body">
                            <p class="card-text mb-2">
                                <strong>رقم الحساب البنكي:</strong> @account.BankAccountNumber
                            </p>
                            <p class="card-text mb-0">
                                <strong>الرصيد الحالي:</strong>
                                <span class="balance-amount @(account.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                                    @account.CurrentBalance.ToString("C")
                                </span>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-info-circle me-1"></i> التفاصيل
                            </a>
                            <a asp-action="Transaction" asp-route-id="@account.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-arrow-left-right me-1"></i> إجراء عملية
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            لا توجد حسابات إنستا باي مطابقة لمعايير البحث.
        </div>
    }

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-right me-2"></i> رجوع
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}