@model CashManagement.Controllers.InstaPayTransactionViewModel
@{
    ViewData["Title"] = "إجراء عملية إنستا باي";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<style>
    /* تعريف المتغيرات للألوان الجديدة */
    :root {
        --bg: #FDFDFD; /* عاجي فاتح */
        --primary: #1D4ED8; /* أزرق نيلي */
        --text: #111827; /* أسود ناعم */
        --light-gray: #F3F4F6; /* رمادي فاتح جداً للترويسة/شريط جانبي */
        --border-color: rgba(17, 24, 39, 0.1); /* أسود ناعم شفاف للحدود */
        --shadow-color: rgba(0, 0, 0, 0.05); /* ظل خفيف */
        --danger-text: #EF4444; /* أحمر للخطر */
    }

    /* تطبيق الخط واتجاه النص */
    body {
        font-family: 'Inter', 'Cairo', sans-serif;
        direction: rtl;
        background-color: var(--bg);
        color: var(--text);
    }

    h1, h2, h3, h4, h5, h6 {
        color: var(--text);
        text-align: right;
    }

    hr {
        border-top: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    /* أنماط الحاوية والبطاقة */
    .container-fluid {
        padding: 1.5rem;
    }

    .card-form-container {
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px var(--shadow-color), 0 2px 4px -1px var(--shadow-color);
        padding: 2rem;
    }

    /* أنماط عناصر النموذج */
    .form-group label {
        color: var(--text);
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block; /* لجعل التسمية تأخذ سطرًا كاملاً */
        text-align: right; /* محاذاة التسمية لليمين */
    }

    .form-control {
        border-color: var(--border-color);
        color: var(--text);
        background-color: white;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
        text-align: right; /* محاذاة النص داخل حقول الإدخال لليمين */
    }

        .form-control[readonly] {
            background-color: var(--light-gray); /* لون خلفية للحقول للقراءة فقط */
            cursor: not-allowed; /* مؤشر لا يسمح بالضغط */
        }

        .form-control:focus {
            border-color: var(--primary); /* لون الحدود عند التركيز */
            box-shadow: 0 0 0 0.25rem rgba(29, 78, 216, 0.25); /* ظل عند التركيز */
        }

    textarea.form-control {
        min-height: 100px; /* ارتفاع افتراضي للمساحة النصية */
        resize: vertical; /* السماح بتغيير الحجم عموديا فقط */
    }

    .text-danger {
        color: var(--danger-text) !important; /* رسائل التحقق */
        font-size: 0.875rem;
        text-align: right; /* محاذاة رسائل الخطأ لليمين */
    }

    /* أنماط الأزرار */
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
        display: inline-flex; /* لجعل الأيقونات والنص بجانب بعضهما البعض */
        align-items: center; /* لمحاذاة العناصر عموديا في الوسط */
    }

        .btn i {
            margin-left: 0.5rem; /* مسافة بين الأيقونة والنص */
            margin-right: 0;
        }

    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background-color: color-mix(in srgb, var(--primary) 90%, black);
            border-color: color-mix(in srgb, var(--primary) 90%, black);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        border-color: var(--light-gray);
        color: var(--text);
    }

        .btn-secondary:hover {
            background-color: color-mix(in srgb, var(--light-gray) 90%, black);
            border-color: color-mix(in srgb, var(--light-gray) 90%, black);
            color: var(--text);
        }
</style>

<div class="container-fluid">
    <h1 class="mb-4">إجراء عملية إنستا باي</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-form-container">
                <form asp-action="Transaction">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="InstaPayId" />

                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="control-label">رقم الهاتف</label>
                        <input asp-for="PhoneNumber" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="control-label">المبلغ</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FeesAmount" class="control-label">الرسوم</label>
                        <input asp-for="FeesAmount" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="FeesAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TransactionType" class="control-label">نوع العملية</label>
                        <select asp-for="TransactionType" class="form-control" asp-items="Html.GetEnumSelectList<CashManagement.Models.TransactionType>()"></select>
                        <span asp-validation-for="TransactionType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="control-label">الوصف</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-end gap-2">
                        <input type="submit" value="تنفيذ العملية" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">رجوع</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
}