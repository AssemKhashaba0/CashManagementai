@model CashManagement.Models.InstaPay

@{
    ViewData["Title"] = "إضافة حساب إنستا باي";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<style>
    /* تعريف المتغيرات للألوان الجديدة */
    :root {
        --bg: #FDFDFD; /* عاجي فاتح */
        --primary: #1D4ED8; /* أزرق نيلي */
        --text: #111827; /* أسود ناعم */
        --secondary-button: #FACC15; /* ذهبي ناعم */
        --light-gray: #F3F4F6; /* رمادي فاتح جداً للترويسة/شريط جانبي */
        --border-color: rgba(17, 24, 39, 0.1); /* أسود ناعم شفاف للحدود */
        --shadow-color: rgba(0, 0, 0, 0.05); /* ظل خفيف */
        --danger-text: #EF4444; /* أحمر للخطر */
    }

    /* تطبيق الخط واتجاه النص */
    body {
        font-family: 'Inter', 'Cairo', sans-serif;
        direction: rtl;
        background-color: var(--bg); /* استخدام اللون العاجي الفاتح للخلفية */
        color: var(--text); /* استخدام الأسود الناعم للنصوص الأساسية */
    }

    h1, h2, h3, h4, h5, h6 {
        color: var(--text); /* التأكد من أن العناوين تستخدم لون النص الأساسي */
        text-align: right; /* محاذاة العناوين لليمين */
    }

    hr {
        border-top: 1px solid var(--border-color); /* لون الخط الفاصل */
        margin-bottom: 1.5rem;
    }

    /* أنماط الحاوية والبطاقة */
    .container-fluid {
        padding: 1.5rem;
    }

    .card-form-container {
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px var(--shadow-color), 0 2px 4px -1px var(--shadow-color);
        padding: 2rem;
    }

    /* أنماط عناصر النموذج */
    .form-group label {
        color: var(--text);
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block; /* لجعل التسمية تأخذ سطرًا كاملاً */
        text-align: right; /* محاذاة التسمية لليمين */
    }

    .form-control {
        border-color: var(--border-color);
        color: var(--text);
        background-color: white;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
        text-align: right; /* محاذاة النص داخل حقول الإدخال لليمين */
    }

        .form-control:focus {
            border-color: var(--primary); /* لون الحدود عند التركيز */
            box-shadow: 0 0 0 0.25rem rgba(29, 78, 216, 0.25); /* ظل عند التركيز */
        }

    .text-danger {
        color: var(--danger-text) !important; /* رسائل التحقق */
        font-size: 0.875rem;
        text-align: right; /* محاذاة رسائل الخطأ لليمين */
    }

    /* أنماط الأزرار */
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
    }

    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background-color: color-mix(in srgb, var(--primary) 90%, black);
            border-color: color-mix(in srgb, var(--primary) 90%, black);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        border-color: var(--light-gray);
        color: var(--text);
    }

        .btn-secondary:hover {
            background-color: color-mix(in srgb, var(--light-gray) 90%, black);
            border-color: color-mix(in srgb, var(--light-gray) 90%, black);
            color: var(--text);
        }
</style>

<div class="container-fluid">
    <h1 class="mb-4">إضافة حساب إنستا باي جديد</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-form-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="control-label">رقم الهاتف</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="BankAccountNumber" class="control-label">رقم الحساب البنكي</label>
                        <input asp-for="BankAccountNumber" class="form-control" />
                        <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="CurrentBalance" class="control-label">الرصيد الحالي</label>
                        <input asp-for="CurrentBalance" class="form-control" />
                        <span asp-validation-for="CurrentBalance" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end gap-2">
                        <input type="submit" value="إضافة" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">رجوع</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
}