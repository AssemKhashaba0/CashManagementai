@model CashManagement.Models.InstaPay

@{
    ViewData["Title"] = "تفاصيل حساب إنستا باي";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<style>
    /* تعريف المتغيرات للألوان الجديدة */
    :root {
        --bg: #FDFDFD; /* عاجي فاتح */
        --primary: #1D4ED8; /* أزرق نيلي */
        --text: #111827; /* أسود ناعم */
        --light-gray: #F3F4F6; /* رمادي فاتح جداً للترويسة/شريط جانبي */
        --border-color: rgba(17, 24, 39, 0.1); /* أسود ناعم شفاف للحدود */
        --shadow-color: rgba(0, 0, 0, 0.05); /* ظل خفيف */
        --success-text: #22C55E; /* أخضر للحالة الناجحة */
        --danger-text: #EF4444; /* أحمر للخطر */
    }

    /* تطبيق الخط واتجاه النص */
    body {
        font-family: 'Inter', 'Cairo', sans-serif;
        direction: rtl;
        background-color: var(--bg);
        color: var(--text);
    }

    h1, h2, h3, h4, h5, h6 {
        color: var(--text);
        text-align: right;
    }

    hr {
        border-top: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    /* أنماط الحاوية والبطاقات */
    .container-fluid {
        padding: 1.5rem;
    }

    .card {
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px var(--shadow-color), 0 2px 4px -1px var(--shadow-color);
        margin-bottom: 1.5rem;
    }

    .card-header {
        background-color: var(--light-gray);
        border-bottom: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
        font-weight: 600;
        color: var(--text);
    }

    .card-body {
        padding: 1.5rem;
    }

    /* أنماط قائمة التفاصيل (dl) */
    .dl-horizontal dt {
        float: right; /* محاذاة المفاتيح لليمين */
        clear: right; /* مسح لضمان عدم تداخل العناصر */
        text-align: right; /* محاذاة النص لليمين */
        font-weight: 600; /* جعل النص سميكًا */
        width: 150px; /* عرض ثابت للمفاتيح */
        padding-left: 10px; /* مسافة بين المفتاح والقيمة */
    }

    .dl-horizontal dd {
        margin-right: 160px; /* مسافة لليسار لتجنب المفتاح */
        text-align: right; /* محاذاة النص لليمين */
        margin-bottom: 0.5rem;
    }

    .dl-horizontal .col-sm-2 {
        text-align: right;
        font-weight: 600;
        color: var(--text);
    }

    .dl-horizontal .col-sm-10 {
        text-align: right;
        color: var(--text);
    }

    /* أنماط الجدول */
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: var(--text);
        border-collapse: separate; /* needed for border-radius on cells */
        border-spacing: 0; /* remove default spacing */
        border: 1px solid var(--border-color); /* Add border to table itself */
        border-radius: 0.5rem; /* Add border-radius to table */
        overflow: hidden; /* ensures border-radius is applied to content */
    }

        .table thead {
            background-color: var(--primary); /* لون الخلفية لرأس الجدول */
            color: white;
        }

        .table th {
            padding: 0.75rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
            text-align: right; /* محاذاة لليمين */
        }

        .table tbody tr {
            background-color: white;
        }

        .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border-top: 1px solid var(--border-color);
            text-align: right; /* محاذاة لليمين */
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: var(--light-gray); /* لون صفوف الأجنحة */
    }

    /* Status badge for the details section */
    .status-badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
        border-radius: 0.375rem;
        font-size: 0.9rem;
    }

        .status-badge.bg-success {
            background-color: var(--success-text) !important;
            color: white;
        }

        .status-badge.bg-danger {
            background-color: var(--danger-text) !important;
            color: white;
        }

    /* أنماط الأزرار */
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
    }

    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background-color: color-mix(in srgb, var(--primary) 90%, black);
            border-color: color-mix(in srgb, var(--primary) 90%, black);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        border-color: var(--light-gray);
        color: var(--text);
    }

        .btn-secondary:hover {
            background-color: color-mix(in srgb, var(--light-gray) 90%, black);
            border-color: color-mix(in srgb, var(--light-gray) 90%, black);
            color: var(--text);
        }
</style>

<div class="container-fluid">
    <h1 class="mb-4">تفاصيل حساب إنستا باي</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4>معلومات الحساب</h4>
        </div>
        <div class="card-body">
            <dl class="row dl-horizontal">
                <dt class="col-sm-3">رقم الهاتف:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">رقم الحساب البنكي:</dt>
                <dd class="col-sm-9">@Model.BankAccountNumber</dd>

                <dt class="col-sm-3">الرصيد الحالي:</dt>
                <dd class="col-sm-9">
                    <span class="@(Model.CurrentBalance >= 0 ? "text-success" : "text-danger") fw-bold">
                        @Model.CurrentBalance.ToString("C")
                    </span>
                </dd>

                <dt class="col-sm-3">الحالة:</dt>
                <dd class="col-sm-9">
                    <span class="status-badge @(Model.Status == CashManagement.Models.AccountStatus.Active ? "bg-success" : "bg-danger")">
                        @(Model.Status == CashManagement.Models.AccountStatus.Active ? "نشط" : "غير نشط")
                    </span>
                </dd>

                <dt class="col-sm-3">تاريخ الإنشاء:</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>
            </dl>
        </div>
    </div>

    <h4 class="mb-3">العمليات</h4>
    <div class="card">
        <div class="card-body p-0">
            @if (Model.InstaPayTransactions != null && Model.InstaPayTransactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>نوع العملية</th>
                                <th>المبلغ</th>
                                <th>الرسوم</th>
                                <th>المبلغ النهائي</th>
                                <th>الوصف</th>
                                <th>تاريخ العملية</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.InstaPayTransactions)
                            {
                                <tr>
                                    <td>@transaction.TransactionType</td>
                                    <td>@transaction.Amount.ToString("C")</td>
                                    <td>@transaction.FeesAmount.ToString("C")</td>
                                    <td>@transaction.NetAmount.ToString("C")</td>
                                    <td>@transaction.Description</td>
                                    <td>@transaction.CreatedAt.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center m-3" role="alert">
                    لا توجد عمليات مسجلة لهذا الحساب.
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <a asp-action="Transaction" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-arrow-left-right me-2"></i> إجراء عملية
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-right me-2"></i> رجوع
        </a>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}