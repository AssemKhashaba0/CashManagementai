@model CashManagement.Controllers.PagedTransactionsViewModel
@{
    ViewData["Title"] = "قائمة العمليات";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<style>
    /* تعريف المتغيرات للألوان الجديدة */
    :root {
        --bg: #FDFDFD; /* عاجي فاتح */
        --primary: #1D4ED8; /* أزرق نيلي */
        --text: #111827; /* أسود ناعم */
        --light-gray: #F3F4F6; /* رمادي فاتح جداً للترويسة/شريط جانبي */
        --border-color: rgba(17, 24, 39, 0.1); /* أسود ناعم شفاف للحدود */
        --shadow-color: rgba(0, 0, 0, 0.05); /* ظل خفيف */
        --success-alert-bg: #D1FAE5; /* أخضر فاتح للتنبيهات الناجحة */
        --success-alert-text: #065F46; /* أخضر داكن للتنبيهات الناجحة */
        --success-alert-border: #A7F3D0; /* حدود خضراء للتنبيهات الناجحة */
        --info-alert-bg: #DBEAFE; /* أزرق فاتح للتنبيهات المعلوماتية */
        --info-alert-text: #1E40AF; /* أزرق داكن للتنبيهات المعلوماتية */
        --info-alert-border: #93C5FD; /* حدود زرقاء للتنبيهات المعلوماتية */
    }

    /* تطبيق الخط واتجاه النص */
    body {
        font-family: 'Inter', 'Cairo', sans-serif;
        direction: rtl;
        background-color: var(--bg);
        color: var(--text);
    }

    h1, h2, h3, h4, h5, h6 {
        color: var(--text);
        text-align: right;
    }

    hr {
        border-top: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    /* أنماط الحاوية والبطاقات */
    .container-fluid {
        padding: 1.5rem;
    }

    .card {
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px var(--shadow-color), 0 2px 4px -1px var(--shadow-color);
        margin-bottom: 1.5rem; /* مسافة بين البطاقات */
    }

    .card-body {
        padding: 1.5rem;
    }

    /* أنماط عناصر النموذج */
    .form-label {
        color: var(--text);
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block; /* لجعل التسمية تأخذ سطرًا كاملاً */
        text-align: right; /* محاذاة التسمية لليمين */
    }

    .form-control {
        border-color: var(--border-color);
        color: var(--text);
        background-color: white;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
        text-align: right; /* محاذاة النص داخل حقول الإدخال لليمين */
    }

        .form-control:focus {
            border-color: var(--primary); /* لون الحدود عند التركيز */
            box-shadow: 0 0 0 0.25rem rgba(29, 78, 216, 0.25); /* ظل عند التركيز */
        }

    /* أنماط الأزرار */
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
        display: inline-flex; /* لجعل الأيقونات والنص بجانب بعضهما البعض */
        align-items: center; /* لمحاذاة العناصر عموديا في الوسط */
    }

        .btn i {
            margin-left: 0.5rem; /* مسافة بين الأيقونة والنص */
            margin-right: 0;
        }

    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background-color: color-mix(in srgb, var(--primary) 90%, black);
            border-color: color-mix(in srgb, var(--primary) 90%, black);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        border-color: var(--light-gray);
        color: var(--text);
    }

        .btn-secondary:hover {
            background-color: color-mix(in srgb, var(--light-gray) 90%, black);
            border-color: color-mix(in srgb, var(--light-gray) 90%, black);
            color: var(--text);
        }

    /* أنماط الجدول */
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: var(--text);
        border-collapse: separate;
        border-spacing: 0;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .table thead {
            background-color: var(--primary);
            color: white;
        }

        .table th {
            padding: 0.75rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
            text-align: right;
        }

        .table tbody tr {
            background-color: white;
        }

        .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border-top: 1px solid var(--border-color);
            text-align: right;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: var(--light-gray);
    }

    /* Pagination */
    .pagination {
        margin-bottom: 0;
    }

    .page-item .page-link {
        color: var(--primary);
        background-color: white;
        border: 1px solid var(--border-color);
        margin-left: 0.25rem; /* Space between page links */
        border-radius: 0.375rem; /* Rounded corners for individual links */
        transition: all 0.2s ease-in-out;
    }

        .page-item .page-link:hover {
            background-color: var(--light-gray);
            border-color: var(--primary);
        }

    .page-item.active .page-link {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }

    .page-item:first-child .page-link,
    .page-item:last-child .page-link {
        border-radius: 0.375rem; /* Ensure first/last buttons also have consistent radius */
    }

    /* Alert messages */
    .alert-success {
        background-color: var(--success-alert-bg);
        color: var(--success-alert-text);
        border-color: var(--success-alert-border);
    }

    .alert-info {
        background-color: var(--info-alert-bg);
        color: var(--info-alert-text);
        border-color: var(--info-alert-border);
    }
</style>

<div class="container-fluid">
    <h1 class="mb-4">قائمة العمليات</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Transactions" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="transactionType" class="form-label">نوع العملية</label>
                        <select name="transactionType" id="transactionType" class="form-control" asp-items="Html.GetEnumSelectList<CashManagement.Models.TransactionType>()">
                            <option value="">الكل</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="filterDate" class="form-label">تاريخ العملية</label>
                        <input type="date" name="filterDate" id="filterDate" class="form-control" value="@(Model.FilterDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-4 d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-filter-right me-2"></i> تصفية
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-0">
            @if (Model.Transactions != null && Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>رقم الهاتف</th>
                                <th>نوع العملية</th>
                                <th>المبلغ</th>
                                <th>الرسوم</th>
                                <th>المبلغ النهائي</th>
                                <th>الوصف</th>
                                <th>تاريخ العملية</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.InstaPay.PhoneNumber</td>
                                    <td>@transaction.TransactionType</td>
                                    <td>@transaction.Amount.ToString("C")</td>
                                    <td>@transaction.FeesAmount.ToString("C")</td>
                                    <td>@transaction.NetAmount.ToString("C")</td>
                                    <td>@transaction.Description</td>
                                    <td>@transaction.CreatedAt.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center m-3" role="alert">
                    لا توجد عمليات مطابقة لمعايير البحث.
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="text-secondary">
            عرض @((Model.CurrentPage - 1) * Model.PageSize + 1) إلى @(Model.CurrentPage * Model.PageSize > Model.TotalItems ? Model.TotalItems : Model.CurrentPage * Model.PageSize) من @Model.TotalItems عملية
        </div>
        <nav>
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Transactions" asp-route-page="@(Model.CurrentPage - 1)" asp-route-transactionType="@Model.FilterTransactionType" asp-route-filterDate="@(Model.FilterDate?.ToString("yyyy-MM-dd"))" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span> السابق
                        </a>
                    </li>
                }
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Transactions" asp-route-page="@i" asp-route-transactionType="@Model.FilterTransactionType" asp-route-filterDate="@(Model.FilterDate?.ToString("yyyy-MM-dd"))">@i</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Transactions" asp-route-page="@(Model.CurrentPage + 1)" asp-route-transactionType="@Model.FilterTransactionType" asp-route-filterDate="@(Model.FilterDate?.ToString("yyyy-MM-dd"))" aria-label="Next">
                            التالي <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-right me-2"></i> رجوع
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}