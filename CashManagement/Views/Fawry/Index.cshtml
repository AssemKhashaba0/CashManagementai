@using CashManagement.ViewModels
@model FawryIndexViewModel
@{
    ViewData["Title"] = "إدارة فوري";
}

<style>
    .fawry-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    .main-title {
        color: white;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        font-size: 2.5rem;
    }

    .balance-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .balance-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .balance-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2);
    }

    .balance-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }

    .balance-card.regular::before {
        background: linear-gradient(90deg, #4facfe, #00f2fe);
    }

    .balance-card.purchases::before {
        background: linear-gradient(90deg, #43e97b, #38f9d7);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }

    .card-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .regular .card-icon {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
    }

    .purchases .card-icon {
        background: linear-gradient(135deg, #43e97b, #38f9d7);
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .balance-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .balance-item {
        text-align: center;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
        border: 1px solid #e9ecef;
    }

    .balance-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 5px;
    }

    .balance-amount {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-action {
        flex: 1;
        padding: 12px 20px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-regular {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        color: white;
    }

    .btn-regular:hover {
        background: linear-gradient(135deg, #00f2fe, #4facfe);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);
        color: white;
    }

    .btn-purchases {
        background: linear-gradient(135deg, #43e97b, #38f9d7);
        color: white;
    }

    .btn-purchases:hover {
        background: linear-gradient(135deg, #38f9d7, #43e97b);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(67, 233, 123, 0.4);
        color: white;
    }

    .transactions-section {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        margin-top: 30px;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .transactions-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .transactions-table th,
    .transactions-table td {
        padding: 15px;
        text-align: center;
        border-bottom: 1px solid #e9ecef;
    }

    .transactions-table th {
        background: #f8f9fa;
        font-weight: 600;
        color: #495057;
        border-top: 1px solid #e9ecef;
    }

    .transactions-table tr:hover {
        background: #f8f9fa;
    }

    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-completed {
        background: #d4edda;
        color: #155724;
    }

    .transaction-type {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .type-deposit {
        background: #d1ecf1;
        color: #0c5460;
    }

    .type-withdraw {
        background: #f8d7da;
        color: #721c24;
    }

    .service-type {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .service-regular {
        background: #cce5ff;
        color: #004085;
    }

    .service-purchases {
        background: #d4edda;
        color: #155724;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .main-title {
            font-size: 2rem;
        }

        .balance-cards {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .balance-info {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .transactions-section {
            padding: 20px;
            overflow-x: auto;
        }

        .transactions-table {
            min-width: 600px;
        }
    }

    @@media (max-width: 480px) {
        .fawry-container {
            padding: 10px 0;
        }

        .balance-card {
            padding: 20px;
        }

        .card-header {
            flex-direction: column;
            text-align: center;
        }

        .main-title {
            font-size: 1.8rem;
        }
    }
</style>

<div class="fawry-container">
    <div class="container">
        <h1 class="main-title">
            <i class="fas fa-mobile-alt"></i>
            إدارة فوري
        </h1>
        
        <!-- زر إضافة الخدمات الافتراضية -->
        <!-- <div class="text-center mb-3">
            <a href="@Url.Action("AddDefaultServices")" class="btn btn-info">
                <i class="fas fa-plus"></i>
                إضافة الخدمات الافتراضية
            </a>
        </div> -->

        <!-- Balance Cards -->
        <div class="balance-cards">
            <!-- فوري عادي -->
            <div class="balance-card regular">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <h3 class="card-title">فوري عادي</h3>
                </div>
                
                <div class="balance-info">
                    <div class="balance-item">
                        <div class="balance-label">الرصيد الحالي</div>
                        <div class="balance-amount">@Model.RegularFawryBalance.ToString("N2") ج.م</div>
                    </div>
                    <div class="balance-item">
                        <div class="balance-label">إجمالي اليوم</div>
                        <div class="balance-amount">@Model.RegularFawryTodayTotal.ToString("N2") ج.م</div>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="@Url.Action("CreateRegular")" class="btn-action btn-regular">
                        <i class="fas fa-plus"></i>
                        عملية جديدة
                    </a>
                </div>
            </div>

            <!-- فوري مشتريات -->
            <div class="balance-card purchases">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <h3 class="card-title">فوري مشتريات</h3>
                </div>
                
                <div class="balance-info">
                    <div class="balance-item">
                        <div class="balance-label">الرصيد الحالي</div>
                        <div class="balance-amount">@Model.PurchasesFawryBalance.ToString("N2") ج.م</div>
                    </div>
                    <div class="balance-item">
                        <div class="balance-label">إجمالي اليوم</div>
                        <div class="balance-amount">@Model.PurchasesFawryTodayTotal.ToString("N2") ج.م</div>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="@Url.Action("CreatePurchases")" class="btn-action btn-purchases">
                        <i class="fas fa-plus"></i>
                        عملية جديدة
                    </a>
                </div>
            </div>
        </div>

        <!-- Transactions Section -->
        <div class="transactions-section">
            <h2 class="section-title">
                <i class="fas fa-history"></i>
                آخر العمليات
            </h2>

            @if (Model.FawryTransactions.Any())
            {
                <div class="table-responsive">
                    <table class="transactions-table">
                        <thead>
                            <tr>
                                <th>التاريخ</th>
                                <th>النوع</th>
                                <th>المبلغ</th>
                                <th>الرسوم</th>
                                <th>صافي المبلغ</th>
                                <th>المستخدم</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.FawryTransactions.Take(20))
                            {
                                <tr>
                                    <td>@transaction.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="transaction-type @(transaction.TransactionType == TransactionType.Deposit ? "type-deposit" : "type-withdraw")">
                                            @(transaction.TransactionType == TransactionType.Deposit ? "إيداع" : "سحب")
                                        </span>
                                    </td>
                                    <td>@transaction.Amount.ToString("N2") ج.م</td>
                                    <td>@transaction.FeesAmount.ToString("N2") ج.م</td>
                                    <td>@transaction.NetAmount.ToString("N2") ج.م</td>
                                    <td>@transaction.User.UserName</td>
                                    <td>
                                        <span class="status-badge status-completed">
                                            مكتملة
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">لا توجد عمليات حتى الآن</p>
                </div>
            }
        </div>
    </div>
</div>



