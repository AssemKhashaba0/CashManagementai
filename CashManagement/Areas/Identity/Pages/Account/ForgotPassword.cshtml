@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "نسيت كلمة المرور؟";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>

<style>
:root {
    --primary-color: #2563eb;
    --primary-dark: #1d4ed8;
    --secondary-color: #3b82f6;
    --accent-color: #10b981;
    --accent-hover: #059669;
    --background-primary: #0f172a;
    --background-secondary: #1e293b;
    --surface-color: #334155;
    --surface-elevated: #475569;
    --text-primary: #f8fafc;
    --text-secondary: #cbd5e1;
    --text-muted: #94a3b8;
    --border-color: #64748b;
    --error-color: #ef4444;
    --error-bg: rgba(239, 68, 68, 0.1);
    --success-color: #22c55e;
    --warning-color: #f59e0b;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 20px;
    --transition-base: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-colors: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Cairo', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: linear-gradient(135deg, var(--background-primary) 0%, var(--background-secondary) 50%, #0f172a 100%);
    color: var(--text-primary);
    min-height: 100vh;
    line-height: 1.6;
    direction: rtl;
    text-align: right;
    overflow-x: hidden;
}

/* إضافة خلفية متحركة */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 20%, rgba(37, 99, 235, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 60%, rgba(168, 85, 247, 0.1) 0%, transparent 50%);
    z-index: -1;
    animation: backgroundMove 20s ease-in-out infinite alternate;
}

@@keyframes backgroundMove {
    0% { transform: translateX(0px) translateY(0px); }
    100% { transform: translateX(30px) translateY(-30px); }
}

.forgot-password-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 24px;
    position: relative;
}

.forgot-password-card {
    background: rgba(51, 65, 85, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-2xl);
    padding: 48px;
    width: 100%;
    max-width: 450px;
    position: relative;
    overflow: hidden;
    transition: var(--transition-base);
}

.forgot-password-card::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
    background-size: 200% 100%;
    animation: gradientMove 3s ease-in-out infinite;
}

@@keyframes gradientMove {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.forgot-password-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.4);
}

.forgot-password-header {
    text-align: center;
    margin-bottom: 40px;
}

.forgot-password-icon {
    width: 88px;
    height: 88px;
    margin: 0 auto 24px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    color: white;
    box-shadow: 0 8px 32px rgba(37, 99, 235, 0.4);
    position: relative;
    overflow: hidden;
}

.forgot-password-icon::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: rotate(45deg);
    animation: shine 2s infinite;
}

@@keyframes shine {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.forgot-password-title {
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 16px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
}

.forgot-password-subtitle {
    color: var(--text-secondary);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    margin-bottom: 8px;
}

.forgot-password-description {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 300;
    line-height: 1.5;
}

.forgot-password-form {
    margin-bottom: 32px;
}

.form-group {
    margin-bottom: 28px;
    position: relative;
}

.form-label {
    display: block;
    margin-bottom: 12px;
    font-weight: 600;
    color: var(--text-primary);
    font-size: 15px;
    text-align: right;
}

.input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.input-icon {
    position: absolute;
    right: 20px;
    color: var(--text-muted);
    font-size: 18px;
    z-index: 2;
    transition: var(--transition-colors);
}

.form-input {
    width: 100%;
    padding: 18px 54px 18px 20px;
    background: var(--surface-color);
    border: 2px solid transparent;
    border-radius: var(--radius-lg);
    color: var(--text-primary);
    font-size: 16px;
    font-family: inherit;
    transition: var(--transition-base);
    box-shadow: var(--shadow-sm);
    direction: ltr;
    text-align: left;
}

.form-input:focus {
    outline: none;
    border-color: var(--primary-color);
    background: var(--surface-elevated);
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1), var(--shadow-md);
}

.form-input:focus + .input-icon {
    color: var(--primary-color);
}

.form-input::placeholder {
    color: var(--text-muted);
    font-size: 15px;
}

.reset-button {
    width: 100%;
    padding: 18px 24px;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    border: none;
    border-radius: var(--radius-lg);
    color: white;
    font-size: 16px;
    font-weight: 700;
    font-family: inherit;
    cursor: pointer;
    transition: var(--transition-base);
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.reset-button::before {
    content: '';
    position: absolute;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: right 0.6s ease;
}

.reset-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(37, 99, 235, 0.4);
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
}

.reset-button:hover::before {
    right: 100%;
}

.reset-button:active {
    transform: translateY(0);
}

.reset-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

.back-link-container {
    text-align: center;
    padding-top: 24px;
    border-top: 1px solid rgba(100, 116, 139, 0.2);
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--primary-color);
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    transition: var(--transition-base);
    padding: 8px 16px;
    border-radius: var(--radius-md);
}

.back-link:hover {
    color: var(--accent-color);
    background: rgba(37, 99, 235, 0.1);
    transform: translateX(4px);
}

.error-message {
    color: var(--error-color);
    font-size: 14px;
    margin-top: 8px;
    display: block;
    text-align: right;
    font-weight: 500;
}

.validation-summary {
    background: var(--error-bg);
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-right: 4px solid var(--error-color);
    padding: 16px 20px;
    border-radius: var(--radius-md);
    margin-bottom: 24px;
    color: var(--error-color);
    font-size: 14px;
    text-align: right;
    font-weight: 500;
}

.validation-summary ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

.validation-summary li {
    margin-bottom: 4px;
}

.validation-summary li:last-child {
    margin-bottom: 0;
}

/* تحسينات للشاشات الصغيرة */
@@media (max-width: 480px) {
    .forgot-password-container {
        padding: 16px;
    }
    
    .forgot-password-card {
        padding: 32px 24px;
        max-width: 100%;
    }
    
    .forgot-password-title {
        font-size: 28px;
    }
    
    .forgot-password-icon {
        width: 72px;
        height: 72px;
        font-size: 30px;
    }
    
    .form-input {
        padding: 16px 48px 16px 16px;
        font-size: 15px;
    }
    
    .input-icon {
        right: 16px;
        font-size: 16px;
    }
    
    .reset-button {
        padding: 16px 20px;
        font-size: 15px;
    }
}

@@media (max-width: 360px) {
    .forgot-password-card {
        padding: 24px 16px;
    }
    
    .forgot-password-title {
        font-size: 24px;
    }
    
    .forgot-password-icon {
        width: 64px;
        height: 64px;
        font-size: 26px;
    }
}

/* تحسينات للشاشات الكبيرة */
@@media (min-width: 1024px) {
    .forgot-password-card {
        padding: 56px;
        max-width: 500px;
    }
    
    .forgot-password-title {
        font-size: 40px;
    }
    
    .forgot-password-icon {
        width: 96px;
        height: 96px;
        font-size: 40px;
    }
}

/* تحسينات لإمكانية الوصول */
@@media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

/* تحسينات للوضع المظلم */
@@media (prefers-color-scheme: dark) {
    :root {
        --text-primary: #f1f5f9;
        --text-secondary: #e2e8f0;
        --text-muted: #a1a1aa;
    }
}

/* تحسينات التركيز للوحة المفاتيح */
.form-input:focus-visible,
.reset-button:focus-visible,
.back-link:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
}

/* تحسينات لحالة التحميل */
.reset-button.loading {
    pointer-events: none;
    opacity: 0.8;
}

.reset-button.loading::after {
    content: '';
    width: 16px;
    height: 16px;
    border: 2px solid transparent;
    border-top: 2px solid white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-right: 8px;
}

@@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}
</style>

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <div class="forgot-password-icon">
                <i class="fas fa-key"></i>
            </div>
            
            <h1 class="forgot-password-title">نسيت كلمة المرور؟</h1>
            <p class="forgot-password-subtitle">
                لا تقلق، سنساعدك في استعادة حسابك
            </p>
            <p class="forgot-password-description">
                أدخل بريدك الإلكتروني وسنرسل لك رابط إعادة تعيين كلمة المرور
            </p>
        </div>

        <form method="post" class="forgot-password-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
            
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                <div class="input-wrapper">
                    <input asp-for="Input.Email" 
                           class="form-input" 
                           autocomplete="username" 
                           aria-required="true" 
                           placeholder="name@example.com"
                           type="email" />
                    <i class="fas fa-envelope input-icon"></i>
                </div>
                <span asp-validation-for="Input.Email" class="error-message"></span>
            </div>

            <button type="submit" class="reset-button">
                <i class="fas fa-paper-plane"></i>
                إرسال رابط إعادة التعيين
            </button>
        </form>

        <div class="back-link-container">
            <a href="/Account/Login" class="back-link">
                <i class="fas fa-arrow-left"></i>
                العودة إلى تسجيل الدخول
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>